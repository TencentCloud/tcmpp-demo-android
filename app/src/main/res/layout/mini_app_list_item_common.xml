<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_mini_app_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="121dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_mini_app_item_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="icon"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_mini_app_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@id/cv_mini_app_item_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mini_app_item_dec"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:textColor="@color/applet_c_828282"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/cv_mini_app_item_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_mini_app_item_name" />

    <TextView
        android:id="@+id/tv_mini_app_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:textColor="@color/applet_mini_app_item_category"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/cv_mini_app_item_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_mini_app_item_dec" />

    <ImageView
        android:id="@+id/iv_mini_app_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:src="@mipmap/applet_ic_mini_item_tool"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>